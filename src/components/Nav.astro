---
import '../styles/global.css';
---

<nav class="fixed top-0 left-0 w-full z-50 bg-black/60 backdrop-blur-md shadow-lg text-white">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href=#lobby class="text-2xl font-extrabold tracking-wide">Nitro Burst</a>

    <div class="hidden md:flex space-x-8 text-lg font-medium">
      <a href="#productos" class="hover:text-gray-400">PRODUCTOS</a>
      <a href="#fadeSobre" class="hover:text-gray-400">SOBRE NOSALTRES</a>
      <a href="#fadeRew" class="hover:text-gray-400">REVIEWS</a>
    </div>

    <div class="hidden md:block">
      <a href="#login" class="text-lg font-medium hover:text-gray-400">INICIAR SESSIÓ</a>
    </div>

    <!-- Icono hamburguesa -->
    <button id="menu-button" class="md:hidden focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="md:hidden hidden px-6 pb-4 space-y-4 bg-black/80">
    <a href="#productos" class="block text-lg font-medium hover:text-gray-400">PRODUCTOS</a>
    <a href="#sobre" class="block text-lg font-medium hover:text-gray-400">SOBRE NOSALTRES</a>
    <a href="#rewiews" class="block text-lg font-medium hover:text-gray-400">REVIEWS</a>
    <a href="#login" class="block text-lg font-medium hover:text-gray-400">INICIAR SESSIÓ</a>
  </div>
</nav>

<!-- Script solo para navegador -->
<script is:browser>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('menu-button');
    const menu = document.getElementById('mobile-menu');

    if (button && menu) {
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
